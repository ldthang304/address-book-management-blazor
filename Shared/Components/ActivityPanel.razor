
@rendermode InteractiveServer

<BlazoredToasts/>
<div class="card mb-4 border-0 border-start border-end border-2 rounded-0">
    <div class="card-body">
        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-clock text-secondary me-2" style="font-size: 20px;"></i>
            <h5 class="mb-0 text-secondary fw-normal">Activity</h5>
        </div>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" data-bs-toggle="tab" href="#tasks" role="tab">
                    <span class="fw-semibold text-muted">Tasks</span>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#notes" role="tab">
                    <span class="fw-semibold text-muted">Notes</span>
                </a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tasks" role="tabpanel">
                <!-- Add Task Button -->
                <div class="d-flex justify-content-end mb-3">
                    <button class="btn btn-info text-white btn-sm" @onclick="ShowAddModal"><i class="bi bi-plus-circle me-1"></i> Add Tasks</button>
                </div>

                <!-- ✅ Task Items -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-semibold text-muted">Task Items</span>
                        <i class="bi bi-chevron-down text-muted task-toggle" style="font-size: 14px; cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#taskItemsContent"></i>
                    </div>
                    <hr class="my-3" />

                    <div id="taskItemsContent" class="collapse show">
                        <div class="d-flex flex-column gap-3">
                            @foreach (var task in taskItems)
                            {
                                <div class="d-flex align-items-start border-start border-4 border-warning ps-3 p-1 task-hover" @onclick="() => ShowEditTaskModal(task)">
                                    <input type="checkbox"
                                           class="form-check-input me-2 mt-1"
                                           checked="@task.IsCompleted"
                                           @onchange="e => ToggleTaskCompletionAsync(task, (bool)(e.Value ?? false))"
                                           @onclick:stopPropagation />

                                    <button class="delete-icon position-absolute top-0 end-0 me-2 d-none"
                                            title="Edit Task"
                                            @onclick="() => DeleteTask(task)"
                                            @onclick:stopPropagation>
                                        <i class="bi bi-trash"></i>
                                    </button>
                                    <div>
                                        <div class="fw-medium">@task.Title <i class="bi bi-bell ms-1 text-muted"></i></div>
                                        <div class="text-muted small">@task.DueDate?.ToString("MMM dd, yyyy hh:mm tt")</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- ✅ Completed Tasks -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-semibold text-muted">Completed Tasks</span>
                        <i class="bi bi-chevron-down text-muted completed-toggle" style="font-size: 14px; cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#completedTasksContent"></i>
                    </div>
                    <hr class="my-3" />

                    <div id="completedTasksContent" class="collapse show">
                        <div class="d-flex flex-column gap-3">
                            @foreach (var task in completedTasks)
                            {
                                <div class="d-flex align-items-start border-start border-4 border-success ps-3 p-1 task-hover" @onclick="() => ShowEditTaskModal(task)">
                                    <input type="checkbox"
                                           class="form-check-input me-2 mt-1"
                                           checked="@task.IsCompleted"
                                           @onchange="e => ToggleTaskCompletionAsync(task, false)"
                                           @onclick:stopPropagation />

                                    <button class="delete-icon position-absolute top-0 end-0 me-2 d-none"
                                            title="Edit Task"
                                            @onclick="() => DeleteTask(task)"
                                            @onclick:stopPropagation>
                                        <i class="bi bi-trash"></i>
                                    </button>
                                    <div>
                                        <div class="fw-medium text-decoration-line-through">@task.Title <i class="bi bi-check-circle ms-1 text-muted"></i></div>
                                        <div class="text-muted small">@task.DueDate?.ToString("MMM dd, yyyy hh:mm tt")</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!--Note tab-->
            <div class="tab-pane fade" id="notes" role="tabpanel">
                <div class="d-flex justify-content-end mb-3">
                    <button class="btn btn-info text-white btn-sm" @onclick="ShowNoteModal">
                        Add Note
                    </button>
                </div>
                @foreach(var note in notes)
                {
                    <div class="position-relative border-start border-2 ps-3 p-1 task-hover" @onclick="() => ShowEditNoteModal(note)">
                        <h6 class="fw-semibold text-secondary">@note.Title</h6>
                        <small class="text-muted">@note.CreatedAt?.ToString("ddd MMM d, h:mm tt") by <span class="text-info">@note.CreatedBy</span></small>

                        <!-- Edit Icon -->
                        <button @onclick:stopPropagation @onclick="() => DeleteNote(note)"><i class="bi bi-trash-fill position-absolute top-0 end-0 text-info me-2" style="cursor: pointer;"></i></button>
                    </div>
                }
            </div>

            <!--Note Modal-->
            <div class="modal fade" id="noteModal" tabindex="-1" aria-labelledby="noteModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 rounded shadow">
                        <EditForm Model="@NewNote" OnValidSubmit="HandleSubmitNote">
                        <div class="modal-body">
                            <input type="text" class="form-control form-control-lg border-0 fw-bold text-muted mb-2"
                                   placeholder="Title" style="font-size: 1.25rem;" @bind-value="@NewNote.Title">
                            <hr class="mt-0">
                            <textarea class="form-control border-0 shadow-none text-muted flex-grow-1" placeholder="Add a note"
                                      style="resize: none;" @bind="@NewNote.Content" @bind:event="oninput"></textarea>
                        </div>

                        <div class="modal-footer border-0 d-flex justify-content-between">
                            <button type="button" class="btn btn-link text-info" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-info text-white px-4">Save</button>
                        </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Task Modal -->
            
                <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 rounded shadow">
                            <EditForm Model="@NewTask" OnValidSubmit="HandleSubmitTask">
                            <div class="modal-body">

                                <!-- Title input -->
                                <InputText class="form-control form-control-lg border-0 fw-bold text-muted mb-2"
                                           @bind-Value="NewTask.Title"
                                           placeholder="Title"
                                           style="font-size: 1.25rem;" />
                                <hr class="mt-0" />

                                <!-- Type -->
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-flag me-2 text-muted"></i>
                                        <span>Type</span>
                                    </div>
                                    <select class="form-select form-select-sm w-auto text-info border-0 bg-transparent"
                                            @bind="NewTask.Type">
                                        @foreach (Master type in masterTaskTypes)
                                        {
                                            <option value="@type.TypeKey">@type.TypeValue</option>
                                        }
                                    </select>
                                </div>

                                <!-- Due Date -->
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-event me-2 text-muted"></i>
                                        <span>Due</span>
                                    </div>
                                    <input type="datetime-local"
                                           class="form-control form-control-sm w-auto text-info border-0 bg-transparent"
                                           @bind="NewTask.DueDate"/>
                                </div>

                                <!-- Notes -->
                                <div class="d-flex align-items-start mb-3">
                                    <i class="bi bi-pencil me-2 text-muted"></i>
                                    <InputTextArea class="form-control border-0 shadow-none text-muted flex-grow-1"
                                                   @bind-Value="NewTask.Note"
                                                   placeholder="Notes"
                                                   style="resize: none;" />
                                </div>
                            </div>

                            <div class="modal-footer border-0 d-flex justify-content-between">
                                <button type="button" class="btn btn-link text-info" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-info text-white px-4">Save</button>
                            </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
    




    

