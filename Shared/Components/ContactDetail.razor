
@inject IContactService ContactService
@inject IMasterService MasterService

<div class="card border-0">
    <div class="card-body p-3 overflow-auto">

        <!-- Details Header -->
        <div class="d-flex align-items-center mb-4">
            <i class="bi bi-list text-muted me-2" style="font-size: 20px;"></i>
            <h5 class="mb-0 fw-normal text-secondary">Details</h5>
        </div>

        <hr class="my-3" />

        <!-- Info Section -->
        <div>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-semibold text-muted">Info</span>
                <i class="bi bi-pencil-fill text-primary" role="button" style="font-size: 14px;"></i>
            </div>

            <div class="mb-2">
                <div class="text-muted small">Organization name</div>
                <div class="fw-medium">@Contact?.Organization?.Name</div>
            </div>

            <div class="mb-2">
                <div class="text-muted small">Job title</div>
                <div class="fw-medium">@Contact?.JobTitle</div>
            </div>

            <div class="mb-2">
                <div class="text-muted small">Personal email</div>
                <div class="fw-medium"><a href="mailto:@(Contact?.PersonalEmail)" class="text-decoration-none">@Contact?.PersonalEmail</a></div>
            </div>

            <div class="mb-2">
                <div class="text-muted small">Work email</div>
                <div class="fw-medium"><a href="mailto:@(Contact?.WorkEmail)" class="text-decoration-none">@Contact?.WorkEmail</a></div>
            </div>

            @foreach(Website website in Contact!.Websites!)
            {
                <div class="mb-2">  
                    <div class="text-muted small">Facebook</div>
                    <div class="fw-medium"><a href="https://www.pobu.ca" target="_blank" class="text-decoration-none">www.pobu.ca</a></div>
                </div>
            }
            <div>
                <div class="text-muted small">Home Address</div>
                <div class="fw-medium">@Contact.HomeAddress</div>
            </div>
            <div>
                <div class="text-muted small">Work Address</div>
                <div class="fw-medium">@Contact.WorkAddress</div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Contact? Contact { get; set; }

}